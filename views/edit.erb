<header>
  <h1>メモアプリ</h1>
</header>

<form action="/memos/<%= @memo[:id] %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <input type="text" name="title" value="<%= escape_html(@memo[:title]) %>">
  <textarea name="content"><%= escape_html(@memo[:content]) %></textarea>
  <button type="submit">保存</button>
</form>
