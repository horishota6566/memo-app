<header>
  <h1>メモアプリ</h1>
</header>

<form action="/memos/<%= @memo[:id] %>" method="post">
  <input type="hidden" name="_method" value="patch" />
  <input type="text" name="title" value="<%= @memo[:title] %>" />
  <textarea name="content"><%= @memo[:content] %></textarea>
  <button type="submit">保存</button>
</form>
